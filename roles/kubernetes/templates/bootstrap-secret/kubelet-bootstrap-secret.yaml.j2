apiVersion: v1
kind: Secret
metadata:
  name: bootstrap-token-{{ bootstrap_token.split('.')[0] }}
  namespace: kube-system
type: bootstrap.kubernetes.io/token
stringData:
  description: "cluster bootstrap token"
  token-id: "{{ bootstrap_token.split('.')[0] }}"
  token-secret: "{{ bootstrap_token.split('.')[1] }}"
  usage-bootstrap-authentication: "true"
  usage-bootstrap-signing: "true"
  auth-extra-groups: "system:bootstrappers:kubeadm:default-node-token,system:bootstrappers:default-node-token"
